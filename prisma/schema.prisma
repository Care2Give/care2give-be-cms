// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaign {
  id                     String                   @id @default(nanoid())
  createdAt              DateTime                 @default(now())
  updatedAt              DateTime                 @updatedAt
  status                 CampaignStatus           @default(ACTIVE)
  startDate              DateTime
  endDate                DateTime
  title                  String                   @db.VarChar(255)
  description            String?
  currency               String                   @default("SGD") @db.VarChar(3)
  dollars                Int                      @default(0)
  cents                  Int                      @default(0)
  createdBy              String
  editedBy               String
  imageUrl               String[]
  CampaignDonationAmount CampaignDonationAmount[]
  Donation               Donation[]
}

enum CampaignStatus {
  ACTIVE
  INACTIVE
  ARCHIVED
}

model CampaignDonationAmount {
  id          String   @id @default(nanoid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  currency    String   @default("SGD") @db.VarChar(3)
  dollars     Int      @default(0)
  cents       Int      @default(0)
  title       String   @db.VarChar(255)
  description String?
  campaign    Campaign @relation(fields: [campaignId], references: [id])
  campaignId  String
}

model Email {
  id        String   @id @default(nanoid())
  editedBy  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  subject   String
  content   String
  version   Int      @default(autoincrement())
}

model Donation {
  id                    String       @id @default(nanoid())
  createdAt             DateTime     @default(now())
  donationType          DonationType
  donorFirstName        String?
  donorLastName         String?
  donorEmail            String?
  donorNricA            String?
  donorNricB            String?      @db.VarChar(4)
  donorTrainingPrograms String[]
  currency              String       @default("SGD") @db.VarChar(3)
  dollars               Int          @default(0)
  cents                 Int          @default(0)
  campaign              Campaign     @relation(fields: [campaignId], references: [id])
  campaignId            String
}

enum DonationType {
  ANONYMOUS
  INDIVIDUAL_WITH_TAX_DEDUCTION
  GROUP_WITH_TAX_DEDUCTION
  WITHOUT_TAX_DEDUCTION
}
